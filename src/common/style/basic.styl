body,html
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif
  width: 100%
  height: 100%
  box-sizing border-box
  width: 100vw;
  overflow-x hidden
html
  //font-size: 62.5%;//相当于10px

body,div,p,span,a,select,option,ul,li,ol,dl,dd,dt,input,section,article,
h1,h2,h3,h4,h5,h6,input,button,nav,footer,header,aside,textarea,i,b,figure,figcaption
  margin 0
  padding 0
  &:hover
   outline:none

li
  list-style none

a
  text-decoration: underline

.clear
 &:after
   display: table
   content:''
   clear:both

 /*border 1px*/
 @media (-webkit-min-device-pixel-ratio:1.5),(min-device-pixel-ratio:1.5)
   .border-1px
    &:after
      -webkit-tranfrom:scaleY(.7)
      transfrom:scaleY(.7)

 @media  (-webkit-min-device-pixel-ratio:2),(min-device-pixel-ratio:2)
   .border-1px
    &:after
      -webkit-transfrom:scaleY(0.5)
      transfrom:scaleY(0.5)

 ::-webkit-scrollbar
   width: 6px
   height: 6px
   background: #ffffff

::-webkit-scrollbar-thumb
    width: 6px
    border-radius 3px
    background #eeeeee

.margin_auto
  margin: 0 auto

.fl
  float: left

.fr
  float: right

.flex
  display flex

.hide
 display none

.show
  display block

.ellipsis
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap







